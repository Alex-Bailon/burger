<div class="container">
  <div class="row">
    <h1>Eat-Da-Burger</h1>
    <img src="http://fanaru.com/spongebob-squarepants/image/167381-spongebob-squarepants-spongebob-squarepants-burger.jpg" alt="Spongebob holding burger">
  </div>
  <div class="row">
    <div class="col s12 m6">
      <h2>Burgers to Eat!!!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger-block }}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s12 m6">
      <h2>Burgers Eaten!!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burger-block }}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <h2>Add a Burger</h2>
    <div class="row">
      <form class="create-form">
        <div class="col s12 m10 form-group">
          <input type="text" placeholder="Burger Name" id="ca" name="name">
        </div>
        <div class="col s12 m2">
          <button type="submit" class="addBurger">Add Burger</button>
        </div>
      </form>
    </div>
  </div>

</div>